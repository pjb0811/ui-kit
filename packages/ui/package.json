{
  "name": "@repo/ui",
  "version": "2.3.4",
  "description": "Modern React UI component library built with TypeScript, Tailwind CSS, and Radix UI. Featuring atoms, molecules, organisms and layout templates for building beautiful interfaces.",
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "tailwindcss",
    "radix-ui",
    "design-system",
    "accessibility",
    "a11y"
  ],
  "author": {
    "name": "jbpark",
    "url": "https://github.com/pjb0811"
  },
  "license": "MIT",
  "homepage": "https://github.com/pjb0811/ui-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/pjb0811/ui-kit",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/pjb0811/ui-kit/issues"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./Typography": "./src/components/atoms/Typography/index.tsx",
    "./Menu": "./src/components/molecules/Menu/index.tsx",
    "./Reveals": "./src/components/molecules/Reveals/index.tsx",
    "./utils": "./src/lib/utils/index.ts",
    "./enums": "./src/lib/enums/index.ts",
    "./core": "./src/core/index.ts",
    "./style.css": "./src/globals.css"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "eslint .",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc -b",
    "prepublishOnly": "node scripts/prepare-publish.mjs",
    "postpublish": "node scripts/restore-package.mjs"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.34.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tsdown": "^0.20.3",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@jbpark/use-hooks": "^2.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@uidotdev/usehooks": "^2.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.12",
    "postcss": "^8.4.31",
    "radix-ui": "^1.4.3",
    "react-colorful": "^5.6.1",
    "react-use": "^17.6.0",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.18",
    "uuid": "^11.1.0",
    "vaul": "^1.1.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
