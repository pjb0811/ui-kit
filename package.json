{
  "name": "ui-kit",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-classnames": "^0.8.2",
    "prettier-plugin-merge": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.28.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write",
    "./apps/web/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'cd ./apps/web && pnpm lint'",
      "bash -c 'cd ./apps/web && pnpm check-types'"
    ],
    "./apps/docs/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'cd ./apps/docs && pnpm lint'",
      "bash -c 'cd ./apps/docs && pnpm check-types'"
    ],
    "./packages/ui/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'cd ./packages/ui && pnpm lint'",
      "bash -c 'cd ./packages/ui && pnpm check-types'"
    ]
  }
}
