# pnpm configuration
# Use hoisted linker for Next.js/Turbopack & Storybook CLI compatibility
node-linker=hoisted
shamefully-hoist=true

# Workspace & peer deps behavior
linkWorkspacePackages=true
strict-peer-dependencies=false
auto-install-peers=true

# Ensure eslint/prettier plugins are available at root
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Registry
registry=https://registry.npmjs.org
